<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/launch_bottom1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon" />

    <ImageView
        android:id="@+id/launch_bottom2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/launch_bottom1"
        android:src="@drawable/detail_loading" />

    <TextView
        android:id="@+id/launch_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/launch_bottom_text" />
</RelativeLayout>
